{
  "name": "fintrackr-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.68",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "codecov": "^3.8.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "inst": "npx nyc instrument --compact=false src instrumented",
    "start": "npm run inst && react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "npx eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "npx prettier --check src",
    "prettier:fix": "npx prettier --write src",
    "coverage": "nyc npm run test -- --coverage --watchAll=false",
    "report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "ct:run": "npx cypress run --component",
    "ct:open": "npx cypress open --component",
    "cy:run": "npx cypress run --e2e",
    "cy:open": "npx cypress open --e2e",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text npm run ct:run && npm run cy:run"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "babel-plugin-istanbul": "^6.1.1",
    "cross-env": "^7.0.3",
    "cypress": "^13.6.1",
    "eslint": "^8.56.0",
    "nyc": "^15.1.0",
    "prettier": "^3.1.1"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index.ts",
      "<rootDir>/src/reportWebVitals.ts",
      "<rootDir>/.*.cy.tsx$"
    ]
  }
}
